<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ctrip.order.dao.CityDao">
    <select id="selectCount" resultType="int">
        select count(1) from `city`
    </select>

    <select id="selectCityList" resultType="com.ctrip.order.model.CityEntity" >
        select * from `City`  where IsDelete=0 order by id desc limit 20
    </select>

    <select id="GetCityInfo" resultType="com.ctrip.order.model.CityEntity" >
        select * from `City` where id=#{id}  and IsDelete=0 limit 1
    </select>

    <update id="updateCity" parameterType="com.ctrip.order.model.CityEntity" >
        update `city` set `name` =#{name},`countryCode`=#{countryCode},`Population`=#{population},
        `District`=#{district}  where id=#{id}
    </update>

    <update id="deleteCity" parameterType="com.ctrip.order.model.CityEntity" >
        update `city` set `isdelete` =1 where id=#{id} and `isdelete` =0
    </update>

    <update id="addCity" parameterType="com.ctrip.order.model.CityEntity" >
        INSERT INTO  `city`
        (`Name`,
        `CountryCode`,
        `District`,
        `Population`)
        VALUES
        (#{name},
        #{countryCode},
        #{district},
        #{population});

    </update>



</mapper>